body {
  font-family: Arial, sans-serif;
  background: #1a1a1a;
  color: #fff;
  text-align: center;
  padding-top: 100px;
}
.container {
  background: #333;
  padding: 40px;
  border-radius: 10px;
  display: inline-block;
}
.key-box {
  font-size: 22px;
  background: #555;
  padding: 10px 20px;
  margin: 20px;
  border-radius: 5px;
}
button {
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
    }
